<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="400dp"
        android:id="@+id/left_layout"
        android:gravity="center_vertical"
        android:layout_marginLeft="500dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#ffffffff"
            android:text="@string/input_password"
            android:textSize="56sp"
            android:id="@+id/set_password_textview"
            android:layout_width="500dp"
            android:layout_height="wrap_content" />

        <EditText
            android:maxLength="8"
            android:focusable="false"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/set_password_textview"
            android:textSize="56sp"
            android:maxLines="1"
            android:id="@+id/set_password_edittext"
            android:layout_width="500dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="40dp"
            android:layout_below="@+id/set_password_edittext"
            android:textSize="48sp"
            android:text="@string/next_step"
            android:id="@+id/set_password_button"
            android:layout_width="500dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <ImageView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@+id/left_layout"
        android:src="@drawable/control_main"
        android:id="@+id/set_password_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
