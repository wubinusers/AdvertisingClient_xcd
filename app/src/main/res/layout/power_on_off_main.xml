<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textColor="#454444"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:id="@+id/current_time_text"
        android:textSize="42sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/everyday_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/eve_sel" />

                <ImageView
                    android:id="@+id/everyday_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mon_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/mon"
                    android:textSize="42sp" />

                <ImageView
                    android:id="@+id/mon_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tue_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/tue" />

                <ImageView
                    android:id="@+id/tue_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wen_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/wen" />

                <ImageView
                    android:id="@+id/wen_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thu_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/thu" />

                <ImageView
                    android:id="@+id/thu_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fri_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/fri" />

                <ImageView
                    android:id="@+id/fri_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sat_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/sat" />

                <ImageView
                    android:id="@+id/sat_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sun_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:src="@drawable/sun" />

                <ImageView
                    android:id="@+id/sun_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="6"
                    android:src="@drawable/week_select"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:listSelector="@drawable/list_background"
            android:divider="#00000000"
            android:id="@+id/on_off_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
